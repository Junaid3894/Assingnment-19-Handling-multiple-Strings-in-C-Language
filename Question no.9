/*9. Write a program that asks the user to enter a username. If the username entered is
one of the names in the list then the user is allowed to calculate the factorial of a
number. Otherwise, an error message is displayed*/

#include<stdio.h>
#include<string.h>
int main()
{
int flag=0;
char temp_str[5][20]={"Junaid3894","Mysirg","Prateeksir","Rahul","Ineuron"};
char str[20];
printf("Enter your Username :");
scanf("%s",&str);
int i;
for(i=0;i<5;i++){
    if(strcmp(str,temp_str[i])==0){
        printf("You are allowed to Calculate\n");
        flag=1;
    }
}
if(flag==1){
    int n;
    int fact=1;
    printf("Enter the number to find its factorial :");
    scanf("%d",&n);
    for(int i=1;i<=n;i++){
        fact=fact*i;
    }
    printf("Factorial of %d is %d",n,fact);
}
else{
    printf("Error you are not allowed ");
}
return 0;
}
